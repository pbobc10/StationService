@model List<GasStationAttendantOutputDto>

@{
    ViewData["Page"] = "Index";
}

@section title {
    <h3>Gas Station Attendant</h3>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
}


@if (Model != null && Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Firstname</th>
                <th>Family Name</th>
                <th>Email</th>
                <th>Shift</th>
                <th>Gas Station</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var gasStationAttendant in Model)
            {
                <tr>
                    <td>@gasStationAttendant.FirstName</td>
                    <td>@gasStationAttendant.FamilyName</td>
                    <td>@gasStationAttendant.Email</td>
                    <td>@gasStationAttendant.Shift</td>
                    <td>@gasStationAttendant.GasStationName</td>
                    <td>
                        <a class="btn btn-link" asp-action="edit" asp-route-id="@gasStationAttendant.Id">Edit</a> |
                        <a class="btn btn-link" asp-action="Details" asp-route-id="@gasStationAttendant.Id">Details</a> |
                        <a class="btn btn-link" asp-action="delete" asp-route-id="@gasStationAttendant.Id" onclick="return confirmDelete()">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
  <p> No Data found, Please create new one</p>  
}


@section Scripts {
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this gasStationAttendant? ");
        }
    </script>
}

