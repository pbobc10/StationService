@model AdministratorInputDto

@section title{
    <h3>Create Administrator</h3>
}

<form asp-controller="administrator" asp-action="create"  method="post">

    <!-- to display error message -->
    <div class="text-danger" asp-validation-summary="All"></div>
    <!-- FirstName -->
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="FirstName" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="FirstName" class="form-control text-capitalize" />
        </div>
        <div class="col">
            <span class="text-bg-danger" asp-validation-for="FirstName"></span>
        </div>
    </div>

    <!-- FamilyName -->
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="FamilyName" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="FamilyName" class="form-control text-uppercase" />
        </div>
        <div class="col">
            <span class="text-bg-danger" asp-validation-for="FamilyName"></span>
        </div>
    </div>

    <!-- Email -->
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Email" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Email" class="form-control text-lowercase" />
        </div>
        <div class="col">
            <span class="text-bg-danger" asp-validation-for="Email"></span>
        </div>
    </div>

    <!-- Add Button -->
    <div class="row mb-3">
        <div class="col-2">
            <input type="submit" value="Add" class="btn btn-primary" />
        </div>
        <div class="col-6">
        </div>
    </div>

</form>
