@model List<GasStationOutputDto>

@{
    ViewData["Page"] = "Index";
}

@section title {
    <h3>GasStations</h3>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
}


@if (Model != null && Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Gas Station</th>
                <th>Location</th>
                <th>Administrator</th>
                <th>Supervisor</th>
                <th>Dispensing Unit Number</th>
                <th>Gas St. Attendant  Number</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var gasStation in Model)
            {
                <tr>
                    <td>@gasStation.Name</td>
                    <td>@gasStation.Location</td>
                    <td>@gasStation.AdministratorName</td>
                    <td>@gasStation.SupervisorName</td>
                    <td>@gasStation.DispensingUnitCount</td>
                    <td>@gasStation.GasStationAttendantCount</td>
                    <td>
                        <a class="btn btn-link" asp-action="edit" asp-route-id="@gasStation.Id">Edit</a> |
                        <a class="btn btn-link" asp-action="Details" asp-route-id="@gasStation.Id">Details</a> |
                        <a class="btn btn-link" asp-action="delete" asp-route-id="@gasStation.Id" onclick="return confirmDelete()">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p> No Data found, Please create new one</p>
}

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this gasStation? ");
        }
    </script>
}

